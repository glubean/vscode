{
  "name": "glubean",
  "displayName": "Glubean — API Testing & REST Client",
  "description": "API testing, REST client & Postman alternative — code-first in TypeScript. Click play, see every request/response, debug with breakpoints, diff between runs. AI-friendly SDK: feed your OpenAPI spec to any AI and get production-ready tests.",
  "version": "0.4.0",
  "publisher": "glubean",
  "license": "MIT",
  "icon": "icon.png",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/glubean/vscode"
  },
  "bugs": {
    "url": "https://github.com/glubean/vscode/issues"
  },
  "homepage": "https://github.com/glubean/vscode#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "glubean",
    "api-testing",
    "api-test",
    "rest-api",
    "rest-client",
    "http",
    "http-client",
    "postman",
    "postman-alternative",
    "openapi-testing",
    "swagger-testing",
    "test-runner",
    "api-explorer",
    "api-client",
    "integration-testing",
    "contract-testing",
    "ai-testing",
    "endpoint-testing",
    "backend-testing",
    "api-regression-testing",
    "deno",
    "typescript",
    "code-first"
  ],
  "qna": "marketplace",
  "galleryBanner": {
    "color": "#1a1a1a",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:**/*.test.ts",
    "workspaceContains:**/deno.json",
    "workspaceContains:**/deno.jsonc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "test": [
        {
          "id": "glubean.tasksView",
          "name": "Glubean Tasks"
        }
      ]
    },
    "configuration": {
      "title": "Glubean",
      "properties": {
        "glubean.glubeanPath": {
          "type": "string",
          "default": "glubean",
          "description": "Path to the glubean CLI executable"
        },
        "glubean.autoDiscover": {
          "type": "boolean",
          "default": true,
          "description": "Automatically discover tests when files are opened or changed"
        },
        "glubean.traceHistoryLimit": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Max trace files to keep per test (older traces are auto-deleted)"
        },
        "glubean.telemetry.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Share anonymous usage data (run counts, errors, feature usage) to help improve Glubean. No code, file paths, or personal data is ever collected. [Learn what's collected](https://github.com/glubean/vscode/blob/main/docs/telemetry.md)"
        },
        "glubean.taskTimeoutMs": {
          "type": "number",
          "default": 300000,
          "minimum": 10000,
          "description": "Milliseconds to wait for a task to produce results before marking it as timed out (default: 5 minutes)"
        }
      }
    },
    "commands": [
      {
        "command": "glubean.runFile",
        "title": "Glubean: Run All Tests in File",
        "icon": "$(play)"
      },
      {
        "command": "glubean.runProject",
        "title": "Glubean: Run All Tests in Project",
        "icon": "$(run-all)"
      },
      {
        "command": "glubean.openLastResult",
        "title": "Glubean: Open Last Result JSON"
      },
      {
        "command": "glubean.checkDependencies",
        "title": "Glubean: Setup"
      },
      {
        "command": "glubean.selectEnv",
        "title": "Glubean: Select Environment"
      },
      {
        "command": "glubean.rerunLast",
        "title": "Glubean: Re-run Last Request"
      },
      {
        "command": "glubean.diffPrevious",
        "title": "Glubean: Diff with Previous Run"
      },
      {
        "command": "glubean.copyAsCurl",
        "title": "Glubean: Copy as cURL"
      },
      {
        "command": "glubean.runPick",
        "title": "Glubean: Run Pick Example"
      },
      {
        "command": "glubean.initProject",
        "title": "Glubean: Initialize Project"
      },
      {
        "command": "glubean.cleanTraces",
        "title": "Glubean: Clean All Traces"
      },
      {
        "command": "glubean.openTrace",
        "title": "Glubean: Open Latest Trace"
      },
      {
        "command": "glubean.tracePrev",
        "title": "Glubean: Previous Trace"
      },
      {
        "command": "glubean.traceNext",
        "title": "Glubean: Next Trace"
      },
      {
        "command": "glubean.traceViewSource",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "glubean.traceViewRich",
        "title": "View as Trace",
        "icon": "$(open-preview)"
      },
      {
        "command": "glubean.resultViewSource",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "glubean.resultViewRich",
        "title": "View as Result",
        "icon": "$(open-preview)"
      },
      {
        "command": "glubean.tasks.run",
        "title": "Run Task",
        "icon": "$(play)"
      },
      {
        "command": "glubean.tasks.runAll",
        "title": "Run All Tasks",
        "icon": "$(run-all)"
      },
      {
        "command": "glubean.tasks.refresh",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "glubean.runFile",
          "when": "resourceFilename =~ /\\.(test|explore)\\.ts$/",
          "group": "navigation"
        },
        {
          "command": "glubean.traceViewSource",
          "when": "glubean.traceViewerActive",
          "group": "navigation"
        },
        {
          "command": "glubean.traceViewRich",
          "when": "!glubean.traceViewerActive && resourceFilename =~ /\\.trace\\.jsonc$/",
          "group": "navigation"
        },
        {
          "command": "glubean.resultViewSource",
          "when": "glubean.resultViewerActive",
          "group": "navigation"
        },
        {
          "command": "glubean.resultViewRich",
          "when": "!glubean.resultViewerActive && resourceFilename =~ /\\.result\\.json$/",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "glubean.runFile",
          "when": "resourceFilename =~ /\\.(test|explore)\\.ts$/",
          "group": "glubean@1"
        },
        {
          "command": "glubean.runProject",
          "when": "explorerResourceIsFolder && resourceFilename =~ /^(?!node_modules$|\\.git$|dist$).+$/",
          "group": "glubean@2"
        }
      ],
      "view/title": [
        {
          "command": "glubean.tasks.runAll",
          "when": "view == glubean.tasksView",
          "group": "navigation"
        },
        {
          "command": "glubean.tasks.refresh",
          "when": "view == glubean.tasksView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "glubean.tasks.run",
          "when": "view == glubean.tasksView && viewItem == glubeanTask",
          "group": "inline"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "glubean.traceViewer",
        "displayName": "Glubean Trace Viewer",
        "selector": [
          {
            "filenamePattern": "*.trace.jsonc"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "glubean.resultViewer",
        "displayName": "Glubean Result Viewer",
        "selector": [
          {
            "filenamePattern": "*.result.json"
          }
        ],
        "priority": "default"
      }
    ],
    "keybindings": [
      {
        "command": "glubean.rerunLast",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "glubean.tracePrev",
        "key": "ctrl+alt+[",
        "mac": "cmd+alt+[",
        "when": "editorTextFocus && resourceExtname == .jsonc"
      },
      {
        "command": "glubean.traceNext",
        "key": "ctrl+alt+]",
        "mac": "cmd+alt+]",
        "when": "editorTextFocus && resourceExtname == .jsonc"
      },
      {
        "command": "glubean.runFile",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus && resourceFilename =~ /\\.(test|explore)\\.ts$/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --sourcemap",
    "build:webview": "esbuild ./src/webview/index.tsx --bundle --outfile=dist/webview/index.js --format=iife --platform=browser --minify --sourcemap --jsx=automatic --jsx-import-source=preact && npx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview/styles.css -m",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch --sourcemap",
    "watch:webview": "esbuild ./src/webview/index.tsx --bundle --outfile=dist/webview/index.js --format=iife --platform=browser --watch --sourcemap --jsx=automatic --jsx-import-source=preact",
    "watch:css": "npx @tailwindcss/cli -i ./src/webview/styles.css -o ./dist/webview/styles.css -w",
    "lint": "npm run lint:types && npm run lint:eslint",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint \"src/**/*.ts\"",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish",
    "install:vscode": "npm install && npm run package -- --out glubean.vsix && code --install-extension glubean.vsix",
    "install:cursor": "npm install && npm run package -- --out glubean.vsix && cursor --install-extension glubean.vsix"
  },
  "devDependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.15",
    "@lezer/highlight": "^1.2.3",
    "@tailwindcss/cli": "^4.2.0",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.24.0",
    "eslint": "^10.0.0",
    "preact": "^10.28.4",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@glubean/scanner": "npm:@jsr/glubean__scanner@^0.11.0",
    "posthog-node": "^5.24.17"
  }
}
